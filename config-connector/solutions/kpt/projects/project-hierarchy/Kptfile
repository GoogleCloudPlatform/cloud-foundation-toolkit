apiVersion: kpt.dev/v1alpha1
kind: Kptfile
metadata:
  name: .
packageMetadata:
  shortDescription: sample description
openAPI:
  definitions:
    io.k8s.cli.setters.org-id:
      description: The organization ID for the associated services
      x-k8s-cli:
        setter:
          name: org-id
          value: "${ORG_ID?}"
          setBy: package-default
    io.k8s.cli.setters.project-id:
      description: The GCP ID of the project
      x-k8s-cli:
        setter:
          name: project-name
          value: project-hierarchy-project
          setBy: package-default
    io.k8s.cli.setters.folder-id:
      description: The GCP ID of the folder
      x-k8s-cli:
        setter:
          name: folder-id
          value: project-hierarchy-folder
          setBy: package-default
