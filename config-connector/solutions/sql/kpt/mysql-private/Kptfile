apiVersion: kpt.dev/v1alpha1
kind: Kptfile
metadata:
  name: mysql-private
packageMetadata:
  shortDescription: configure private mysql instance
openAPI:
  definitions:
    io.k8s.cli.setters.user-name:
      description: name of SQL user
      x-k8s-cli:
        setter:
          name: user-name
          value: ${USER_NAME?}
          setBy: PLACEHOLDER
    io.k8s.cli.setters.password:
      description: password of SQL user
      x-k8s-cli:
        setter:
          name: password
          value: ${PASSWORD?}
          setBy: PLACEHOLDER
    io.k8s.cli.setters.region:
      description: region of SQL instance
      x-k8s-cli:
        setter:
          name: region
          value: us-central1
          setBy: package-default
    io.k8s.cli.setters.database-name:
      description: name of SQL database
      x-k8s-cli:
        setter:
          name: database-name
          value: mysql-private-database
          setBy: package-default
    io.k8s.cli.setters.instance-name:
      description: name of SQL instance
      x-k8s-cli:
        setter:
          name: instance-name
          value: mysql-private-instance
          setBy: package-default
