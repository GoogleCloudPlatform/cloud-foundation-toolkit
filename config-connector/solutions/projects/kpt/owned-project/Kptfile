apiVersion: kpt.dev/v1alpha1
kind: Kptfile
metadata:
  name: owned-project
packageMetadata:
  shortDescription: Create a project under a folder and grant the owner role for the
    project
openAPI:
  definitions:
    io.k8s.cli.setters.project-id:
      description: ID of project
      x-k8s-cli:
        setter:
          name: project-id
          value: ${PROJECT_ID?}
          setBy: PLACEHOLDER
    io.k8s.cli.setters.billing-account:
      description: ID of project billing account
      x-k8s-cli:
        setter:
          name: billing-account
          value: ${BILLING_ACCOUNT_ID?}
          setBy: PLACEHOLDER
    io.k8s.cli.setters.folder-id:
      description: numeric GCP ID of folder
      x-k8s-cli:
        setter:
          name: folder-id
          value: "${FOLDER_ID?}"
          setBy: PLACEHOLDER
    io.k8s.cli.setters.iam-member:
      description: cloud identity name to give project owner permission to
      x-k8s-cli:
        setter:
          name: iam-member
          value: ${IAM_MEMBER?}
          setBy: PLACEHOLDER
