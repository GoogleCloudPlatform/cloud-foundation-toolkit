apiVersion: kpt.dev/v1alpha1
kind: Kptfile
metadata:
  name: .
packageMetadata:
  shortDescription: sample description
openAPI:
  definitions:
    io.k8s.cli.setters.service-account-name:
      x-k8s-cli:
        setter:
          name: service-account-name
          value: ${SERVICE_ACCOUNT?}
          setBy: PLACEHOLDER
      description: The name of the new IAM service account.
    io.k8s.cli.setters.iam-member:
      x-k8s-cli:
        setter:
          name: iam-member
          value: ${IAM_MEMBER?}
          setBy: PLACEHOLDER
      description: GCP identity to grant privileges
    io.k8s.cli.setters.role:
      x-k8s-cli:
        setter:
          name: role
          value: roles/iam.serviceAccountTokenCreator
          setBy: package-default
      description: the IAM role to grant to the member

